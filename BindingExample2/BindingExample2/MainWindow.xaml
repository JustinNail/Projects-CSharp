<Window x:Class="BindingExample2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Slider Height="22"
                    Name="the_slider"
                    Width="100"
                    Minimum="10"
                    Maximum="200"
                    Value="50"/>
            <TextBox Height="23"
                     Text="{Binding ElementName=the_slider,Path=Value,UpdateSourceTrigger=PropertyChanged}"
                     Width="120"
                     Margin="5"/>
        </StackPanel>
        <Ellipse Width="{Binding Path=Height,RelativeSource={RelativeSource Self}}"
                 Height="{Binding ElementName=the_slider,Path=Value}"
                 Grid.Row="1"
                 Stroke="Black"
                 Fill="AntiqueWhite"/>
    </Grid>
</Window>
