<Window x:Class="BindingExample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Slider Name="the_slider"
                    Margin="5" Maximum="100" />
            <TextBox Margin="5"
                     Text="{Binding ElementName=the_slider,Path=Value,UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</Window>
